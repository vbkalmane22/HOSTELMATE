<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangePassword">


    <TextView
        android:id="@+id/textView10"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="745dp"
        android:fontFamily="@font/space_grotesk_bold"
        android:text="How to change Password ?"

        android:textSize="25sp"
        app:drawableTint="#150000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="377dp"
        android:layout_height="26dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-5dp"
        android:layout_marginBottom="695dp"
        android:fontFamily="@font/space_grotesk_bold"
        android:text="1.Enter the USN and Old Password"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="316dp"
        android:layout_height="21dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="648dp"
        android:fontFamily="@font/space_grotesk_bold"
        android:text="2.Click on Verify"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="343dp"
        android:layout_height="26dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="600dp"
        android:fontFamily="@font/space_grotesk_bold"
        android:text="3.Enter the new password and submit"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/editusn"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="78dp"
        android:layout_marginBottom="392dp"
        android:background="@drawable/navbar"
        android:ems="10"
        android:fontFamily="@font/space_grotesk_bold"
        android:hint="USN"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColor="#000000"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="76dp"
        android:layout_marginBottom="316dp"
        android:background="@drawable/navbar"
        android:ems="10"
        android:fontFamily="@font/space_grotesk_bold"
        android:hint="Old Password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/editTextPassword2"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="76dp"
        android:layout_marginBottom="237dp"
        android:background="@drawable/navbar"
        android:ems="10"
        android:fontFamily="@font/space_grotesk_bold"
        android:hint="New Password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="#000000" />

    <Button
        android:id="@+id/button7"
        android:layout_width="184dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="114dp"
        android:layout_marginBottom="156dp"
        android:background="@drawable/lgnbtn"
        android:text="Verify"
        android:textColor="#0B0000"
        app:backgroundTint="#8CD33A" />

    <Button
        android:id="@+id/button8"
        android:layout_width="184dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="116dp"
        android:layout_marginBottom="91dp"
        android:background="@drawable/lgnbtn"
        android:text="Reset"
        android:textColor="#0B0000"
        app:backgroundTint="#A8B0E8" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="205dp"
        android:layout_marginBottom="491dp"
        android:fontFamily="@font/space_grotesk_bold"
        android:textSize="20sp" />


</RelativeLayout>